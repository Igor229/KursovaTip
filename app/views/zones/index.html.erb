<h1 style="text-align: center">Відпочинкові зони міста Івано-Франківськ</h1>

<table style="margin: auto; text-align: center">
  <thead>
    <tr>
      <th>Назва</th>
      <th>Опис</th>
      <th>Адреса</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @zones.each do |zone| %>
      <tr>
        <td><%= zone.name %></td>
        <td><%= zone.description %></td>
        <td><%= zone.adress %></td>
        <td><%= link_to 'Show', zone %></td>
        <td><%= link_to 'Edit', edit_zone_path(zone) %></td>
        <td><%= link_to 'Destroy', zone, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

